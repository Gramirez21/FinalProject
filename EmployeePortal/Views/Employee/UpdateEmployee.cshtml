@model Employee

<h2>Update @Model.EmployeeID</h2>

@using (Html.BeginForm("UpdateEmployeeToDatabase", "Employee", "Post"))
{
    <input asp-for="EmployeeID" type="hidden" value="@Model.EmployeeID" />

    <label asp-for="EmployeeID" class="control-label">EmployeeID</label>
    <input type="text" name="EmployeeId" class="form-control" value="@Model.EmployeeID" />

    <label asp-for="FirstName" class="control-label">FirstName</label>
    <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />

    <label asp-for="LastName" class="control-label">LastName</label>
    <input type="text" step="0.01" name="LastName" class="form-control" value="@Model.LastName" />

    <label asp-for="Email" class="control-label">Email</label>
    <input type="text" name="Email" class="form-control" value="@Model.Email" />

    <label asp-for="Department" class="control-label">Department</label>
    <input type="text" name="Department" class="form-control" value="@Model.Department" />

    <label asp-for="Salary" class="control-label">Salary</label>
    <input type="text" name="Salary" class="form-control" value="@Model.Salary" />



    <input type="submit" value="Update Product" class="btn btn-primary" />
}